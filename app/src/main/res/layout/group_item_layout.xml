<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="80dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="15dp"
        android:src="@drawable/ic_group" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="abcsdfsdfsdfs"
        android:textColor="@color/colorPrimaryT"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/groupName"
        android:layout_alignStart="@+id/groupName"
        android:layout_below="@+id/groupName"
        android:layout_marginRight="80dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:text="asdasdasdas" />

    <Button
        android:text="Join"
        android:textColor="@color/colorGreen"
        android:textStyle="bold"
        android:background="@color/colorGray"
        android:id="@+id/join_leave"
        android:layout_width="wrap_content"
        android:layout_height="25dp"

        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#2aaaaaaa"></View>

</RelativeLayout>